{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
